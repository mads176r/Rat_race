<Window x:Class="RatRaceWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RatRaceWPF" 
        mc:Ignorable="d"
        Title="RatRace" Height="500" Width="500">


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="80" ></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>


        <Label Grid.ColumnSpan="3" HorizontalAlignment="Center"
               VerticalAlignment="Center" Content="Hello! Welcome to RatRace!&#xA;You now have these choices: " FontSize="25"/>

        <Button
            Grid.Row="1" Grid.Column="0" Click="Button_Click"
            Content="1: Place a bet"
            />
        <Button 
            Grid.Row="1" Grid.Column="1" Click="Button_Click"
            Content="2: Start Race"
            />
        <Button 
            Grid.Row="1" Grid.Column="2" Click="Button_Click"
            Content="3: Create"
            />
        <Button 
            Grid.Row="2" Grid.Column="0" Click="Button_Click"
            Content="4: empty"
            />
        <Button 
            Grid.Row="2" Grid.Column="1" Click="Button_Click"
            Content="5: View Logs"
            />
        <Button 
            Grid.Row="2" Grid.Column="2" Click="Button_Click"
            Content="6: Leave the game"
            />
